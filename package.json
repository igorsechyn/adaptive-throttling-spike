{
  "name": "adaptive-throttling",
  "version": "0.0.0",
  "description": "",
  "`auth`or": "author",
  "license": "license",
  "luthierMeta": {
    "version": "1.15.0"
  },
  "scripts": {
    "lint:code": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:code:fix": "npm run lint:code -- --fix",
    "rm:dist": "rm -rf ./dist",
    "build": "npm run rm:dist && tsc --noEmit false",
    "test": "npm-run-all --parallel test:all lint:code",
    "test:all": "jest --coverage",
    "watch": "jest --testPathPattern './test/unit' --watchAll",
    "start": "npm run build && NODE_ENV=production node index.js",
    "dev": "npm run build && NODE_ENV=development nodemon index.js"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/express": "^4.17.2",
    "@types/express-rate-limit": "^3.3.3",
    "@types/jest": "^24.0.12",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.24",
    "@types/yamljs": "^0.2.30",
    "@typescript-eslint/eslint-plugin": "1.10.2",
    "@typescript-eslint/parser": "1.10.2",
    "axios": "^0.19.2",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-no-only-tests": "2.3.1",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.6",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "1.18.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "prettier",
      "no-only-tests"
    ],
    "rules": {
      "no-only-tests/no-only-tests": "error",
      "sort-imports": "off",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true
        }
      ],
      "semi": 2,
      "camelcase": 0,
      "curly": [
        "error",
        "all"
      ],
      "no-bitwise": 2,
      "eqeqeq": 2,
      "wrap-iife": [
        2,
        "any"
      ],
      "no-use-before-define": 0,
      "new-cap": 0,
      "no-caller": 2,
      "no-undef": 2,
      "strict": 0,
      "no-unused-expressions": 0,
      "no-eval": 2,
      "dot-notation": 0,
      "no-unused-vars": 2,
      "comma-style": [
        2,
        "last"
      ],
      "no-irregular-whitespace": 2,
      "lines-between-class-members": [
        "error",
        "always"
      ],
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-parameter-properties": "off",
      "@typescript-eslint/explicit-function-return-type": "off"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:code:fix",
      "git add"
    ]
  },
  "directories": {
    "lib": "dist"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "collectCoverageFrom": [
      "src/**/*"
    ],
    "modulePathIgnorePatterns": [
      "npm-cache",
      ".npm"
    ]
  },
  "dependencies": {
    "bunyan": "^1.8.12",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.1",
    "lodash": "^4.17.15",
    "portfinder": "^1.0.25",
    "ts-node": "^8.6.1"
  }
}
